<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
  <persistence-unit name="POI_LocalizerPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>poi_localizer.model.Place</class>
    <class>poi_localizer.model.PlaceEvent</class>
    <class>poi_localizer.model.PlaceOpeningHour</class>
    <class>poi_localizer.model.PlacePhoto</class>
    <class>poi_localizer.model.PlaceReview</class>
    <class>poi_localizer.model.PlaceType</class>
    <class>poi_localizer.model.User</class>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/poi_localizer"/>
      <property name="javax.persistence.jdbc.password" value="Valhalla"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.user" value="poi_user"/>
    </properties>
  </persistence-unit>
</persistence>
